@model IEnumerable<MyBlog.Models.BlogPost>

<link rel="stylesheet" href="~/css/GeneralStyle.css" />
<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<!-- Bootstrap -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<!-- Css -->
<link rel="stylesheet" href="~/css/site.css" />

<style>
    .card {
        height: 400px; /* Kartların sabit yüksekliği */
        width: 350px; /* Kartların genişliği */
        overflow: hidden; /* İçeriği aşan kısımları gizle */
        display: flex;
        flex-direction: column;
        justify-content: space-between; /* Dikeyde elemanları yayar */
        align-items: center; /* Yatayda elemanları ortalar */
        margin: 15px; /* Kartlar arasında boşluk */
        text-align: center; /* Metinleri ortalar */
        position: relative; /* Konumunu belirt */
        border-radius: 15px;
    }

    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between; /* Dikeyde elemanları yayar */ */
        align-items: center; /* Yatayda elemanları ortalar */
        padding: 15px;
        height: 100%; /* Kartın tamamını kaplar */
    }

    .card-title {
        font-size: 1.25rem; /* Başlık boyutu */
        margin-bottom: 15px;
    }

    .card-text img {
        max-width: 100%;
        max-height: 200px; /* Resim yüksekliği sınırı */
        display: block;
        margin: 0 auto 15px; /* Alt boşluk ekle */
        align-self: flex-start; /* Fotoğrafı üste yerleştir */
    }

    .card-text {
        flex-grow: 1;
        overflow: hidden; /* Fazla metni gizle */
        font-size: 1rem; /* Metin boyutu */
        line-height: 1.5rem; /* Satır yüksekliği */
        text-align: left; /* Metni sol ortala */
    }

    .truncate {
        display: -webkit-box;
        -webkit-line-clamp: 5; /* Görünecek satır sayısı */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .btn {

        margin-top:auto;
        align-self: center; /* Yatayda ortala */
        position: absolute; /* Mutlaka konumu sabit kalsın */
        bottom: 15px; /* Kartın alt kenarına 15px mesafe bırak */
        
    }

</style>
<div class="box">
<h1>İÇERİKLER</h1>

<div class="container">
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-4 d-flex align-items-stretch">
                   
                    <div class="card mb-4 ">
                        <div class="kart">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@post.Title</h5>
                        <div class="card-text flex-grow-1">
                            @Html.Raw(TruncateHtml(post.Content, 200))
                        </div>
                        <a href="@Url.Action("Details", "User", new { id = post.Id })" class="btn btn-primary">Devamını Oku</a>
                    </div>
                </div>
                </div>
            </div>
        }
    </div>
</div>

@functions {
    public static string TruncateHtml(string input, int length)
    {
        // Close any open tags properly
        if (input.Length <= length)
        {
            return input;
        }

        var truncated = input.Substring(0, length);

        var lastOpeningTagIndex = truncated.LastIndexOf('<');
        var lastClosingTagIndex = truncated.LastIndexOf('>');

        if (lastOpeningTagIndex > lastClosingTagIndex)
        {
            var closingTagIndex = input.IndexOf('>', lastOpeningTagIndex);
            if (closingTagIndex != -1)
            {
                truncated = input.Substring(0, closingTagIndex + 1);
            }
        }

        return truncated + "...";
    }
}
</div>

