@page
@model LoginModel

@{ 
    ViewData["Title"] = "";
}
<style>
    h1 {
        color: white;
        text-align: center;
    }

    .btn {
        
        bottom: 15px;
        font-size: 20px;
        border-radius: 50px;
        margin: 28px;
        height:60px;
        
    }

    .form-floating > .form-control {
        height: 60px;
        padding: 10px; 
        font-size: 16px; 
        margin-top: 20px;
    }

    .choice {
        font-size: 15px;
        margin-bottom :20px;
    }
</style>
<body>
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-12">
        <section>
            <form class="form-style" id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.UserName" class="form-label">Kullanıcı Adı</label>
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Şifre</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                    <div style="color:black;" class="checkbox mb-3">
                        <label class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Beni Hatırla
                        </label>
                    </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-dark">Giriş Yap</button>
                </div>
                    <div class="choice">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Parolanızı mı unuttunuz?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Yeni kullanıcı olarak kaydolun</a>
                    </p>
                    
                </div>
            </form>
        </section>
 
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</body>