<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyBlog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyBlog.styles.css" asp-append-version="true" />
</head>
<body>
    
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MyBlog</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        
                        @if (User.IsInRole("Admin") || User.IsInRole("Editor") || User.IsInRole("User"))
                        {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Profile" asp-action="Index">Profil</a>
                        </li>

                        
                            <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">İçerik</a>
                            </li>


                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="MyComments">Yorumlarım</a>
                            </li>
                        }

                        @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Editor" asp-action="Create">Yazı Oluştur</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Editor" asp-action="Index">Bloglarım</a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="naw-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Yönetim</a>
                            </li>
                        }

                        
                    </ul>
                    @if (User.IsInRole("Admin") || User.IsInRole("Editor") || User.IsInRole("User"))
                    {
                        <!-- Arama çubuğu başlangıcı -->
                        <form asp-controller="User" asp-action="Search" method="get" class="form-inline my-2 my-lg-0">
                            <input class="form-control mr-sm-2" type="search" placeholder="Başlık veya Yazar Ara" aria-label="Ara" name="SearchTerm">
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Ara</button>
                        </form>
                        <!-- Arama çubuğu bitişi -->
                        <!-- Arama sonuçları başlangıcı -->
                        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                        {
                            <div class="search-results">
                                <h4>Arama Sonuçları</h4>
                                <ul>
                                    @foreach (var post in ViewBag.SearchResults)
                                    {
                                        <li>
                                            <a href="@Url.Action("Details", "User", new { id = post.Id })">@post.Title</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                        <!-- Arama sonuçları bitişi -->
                    }
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
   
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MyBlog - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    
</body>
</html>
