@model EditUserPageModel

<link rel="stylesheet" href="~/css/GeneralStyle.css" />
<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<!-- Bootstrap -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<style>
    .button {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 15px;
        border-radius: 50px;
    }

    .box{
        box-shadow: 0 0 25px rgba(0, 0, 0, 0.3);
        border-radius: 60px;
        padding: 20px;
        margin: 40px;
       
    }

    .form-group {
        margin: 20px;
    }

    .h1 {
        color: black;
        
        display: block;
        width: 100%;
        
    }
</style>

<div class="box">
    <h1 style="text-align: center;">@Model.User.FullName Kullanıcısını Düzenle</h1>

    <form asp-action="EditUser" method="post">
        <input type="hidden" asp-for="User.Id" enctypr="multipart/form-data"/>


        <div class="form-group">
            <p>
                Ad-Soyad:
                <input type="text" value="@Model.User.FullName" asp-for="User.FullName" class="form-control"/>
            </p>
        </div>


        <div class="form-group">
            <p>
                E-mail:
            <input type="email" value="@Model.User.Email" asp-for="User.Email" class="form-control" />
            </p>
        </div>

        <div class ="form-group">
            <p>
                Doğum Tarihi:
            <input type="datetime" value="@Model.User.DateOfBirth.ToString("dd-MM-yyyy")" asp-for="User.DateOfBirth" class="form-control" />
            </p>
        </div>

    
        <div class="form-group">
            <p>
                Cinsiyet:
                <label>@Model.User.Gender</label> <br />
            <select asp-for="User.Gender" class="form-control">
                    <option value="Kadın">Kadın</option>
                    <option value="Erkek">Erkek</option>
                </select>
            </p>
        </div>

    <div class="form-group">
            <label>Mevcut Rol:@Model.User.Role</label> 
            <select asp-for="User.Role" asp-items="Model.AllRoles" class="form-control"></select>
        </div>
       
        <div class ="button">
            <button type="submit" style="border-radius: 50px;">Kaydet</button>
        </div>


    </form>

</div>
















  









   

